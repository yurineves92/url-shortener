{% extends 'layout.twig' %}

{% block content %}
<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <h2 class="text-center">Criar Novo Perfil</h2>

        {% include 'message/_alert.twig' %}

        <form method="POST" action="{{ path_for('createRole') }}" class="mt-4">
            <div class="mb-3">
                <label for="name" class="form-label">Nome do Perfil</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Insira o nome do perfil" required>
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Criar Perfil</button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
