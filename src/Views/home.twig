{% extends 'layout.twig' %}

{% block content %}
<div class="row justify-content-center">
    <div class="col-md-6">
        <h1 class="text-center">Encurtador de URLs</h1>

        {% if message %}
            <div class="alert alert-{{ alertType }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endif %}

        <form action="{{ path_for('shorten') }}" method="POST" class="mt-4">
            <div class="mb-3">
                <input type="url" name="long_url" class="form-control" placeholder="Insira a URL longa aqui" required>
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Encurtar</button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
