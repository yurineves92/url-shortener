{% extends 'layout.twig' %}

{% block content %}
<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <h2 class="text-center">Encurtador de URLs</h2>

        {% include 'message/_alert.twig' %}

        <form action="{{ path_for('shorten') }}" method="POST" class="mt-4">
            <div class="mb-3">
                <input type="url" name="long_url" class="form-control" placeholder="Insira a URL longa aqui" required>
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Encurtar</button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
