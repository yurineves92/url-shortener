{% block content %}
<div class="row justify-content-center">
    <div class="col-md-6">
        <h1 class="text-center">URL Encurtada</h1>

        {% if message %}
            <div class="alert alert-{{ alertType }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endif %}

        <p class="text-center">Sua URL encurtada Ã©: <a href="{{ short_url }}" target="_blank">{{ short_url }}</a></p>
        <div class="d-grid">
            <a href="/" class="btn btn-secondary">Encurtar outra URL</a>
        </div>
    </div>
</div>
{% endblock %}
